{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bluebits/cument": ["libs/cument/src/index.ts"],
      "@bluebits/doc": ["libs/doc/src/index.ts"],
      "@bluebits/document": ["libs/document/src/index.ts"],
      "@bluebits/ui": ["libs/ui/src/index.ts"],
      "@bluebits/utilisateur": ["libs/utilisateur/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
